public class leader {
	public static void leader(int arr[],int n) {
    int max=0;
    for(int i=n-1; i>=0; i--) {
        if(arr[i]>max) {
        	System.out.println(arr[i]+" is a leader");
            max=arr[i];
        }
    }
}

public static void main(String arg[]) {
    int arr[] = {7,10,4,10,6,5,2};
    int n =arr.length;
    leader(arr,7);
    
	}
}

