public class leader{
	public static void leadership(int arr[],int n) {
		for(int i=0;i<n;i++) {
			for(int j=i;j<n;j++) {
				if(arr[i]<arr[j]) {
					break;
				}
				if(j==n-1) {
					System.out.println(arr[i]+" is a leader");
				}
			}
			
		}
	}
	public static void main(String arg[]) {
		int arr[] = {7,10,4,10,6,5,2};
		int n =arr.length;
		leadership(arr,n);
	}
}
